extends ../layout/admin

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
         div.py-10 
                h1.text-4xl.my-10.font-extrabold.text-center Bienes 
                    span.font-normal Raices
                h2.text-center.text-2xl.font-extrabold= pagina

         if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores
                        p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

         div.mt-8.mx-auto.max-w-md 
            div.bg-white.py-8.px-4.shadow 
            
             form.space-y-5(method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre 
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value=datos.nombre )

                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro 
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value=datos.email)    

                input(class ="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar cambios") 


